//Abrir librerías 
#include<stdio.h>
#include<math.h>

//Bloque de variables

int main(){
	
	int GastoCaloricoDiario;
	float p, e, a, dias, metabolismoBasal, x, y, z;
	char s, h, m, actividadFisica, nulo, moderado, ligero, fuerte;
	
	/*
	Bloquee de instrucciones 
	*/
	
	printf("Hola, por favor ingrese los datos que se piden a continuacion:\n");
	printf("Ingrese su edad:\n");
	scanf("%f, &e");
	printf("Ingrese su peso:\n");
	scanf("%f, &p");
	printf("Ingrese su altura en centimetros:\n");
	scanf("%f, &a");
	printf("Ingrese su sexo (m/h):\n");
	scanf("%c, &m, &h");

	
	//Estructura de selección (if/else) para sacar el metabolismo badal dependiendo del sexo de la persona
	
	if(s=m){
		
		x= (10 * p);
		y= (6.25 * a);
		z= (5 * e);
		metabolismoBasal= (x+ y - z -161);
		printf("Su metabolismo basal es:%d", metabolismoBasal);
	
	}
	
	else if(s='h'){
		
		x= (10 * p);
		y= (6.25 * a);
		z= (5 * e);
		metabolismoBasal= (x+ y -z  + 5);
		printf("Su metabolismo es:%d", metabolismoBasal);
	}



printf("Ingrese la cantidad de actividad fisica que realiza:\n");
printf("nulo (no hace ejercicio)");
printf("ligero (1 a 3 días)");
printf("moderado (3 a 5 días)");
printf("fuerte (6 días)");
scanf("%f, &d");
		
		if (actividadFisica==nulo){
			GastoCaloricoDiario= metabolismoBasal*1.2;
			printf("Su gasto calorico diario es:%d", GastoCaloricoDiario);
		}	
		else if (actividadFisica ==ligero ){
			GastoCaloricoDiario= metabolismoBasal*1.375;
			printf("Su gasto calorico diario es:%d", GastoCaloricoDiario);
		}	
			if (actividadFisica ==moderado){
				GastoCaloricoDiario= metabolismoBasal*1.55;
				printf("Su gasto calorico diario es:%d", GastoCaloricoDiario);
			}
			else if(actividadFisica ==fuerte);{
				GastoCaloricoDiario= metabolismoBasal*1.725;
				printf("Su gasto calorico diario es:%d", GastoCaloricoDiario);
			}

}



